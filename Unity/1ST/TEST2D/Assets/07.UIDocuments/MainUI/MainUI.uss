.box {
    flex-basis: 200px;
    margin-right: 20px;
    border-top-left-radius: 10px;
    border-bottom-left-radius: 10px;
    border-top-right-radius: 10px;
    border-bottom-right-radius: 10px;
    height: 300px;
    flex-grow: 1;
}

.btn {
    font-size: 25px;
    padding-left: 12px;
    padding-right: 12px;
    padding-top: 8px;
    padding-bottom: 8px;
    border-top-left-radius: 5px;
    border-bottom-left-radius: 5px;
    border-top-right-radius: 5px;
    border-bottom-right-radius: 5px;
    background-color: rgba(20, 0, 255, 255);
    color: rgba(255, 255, 255, 255);
    transition-duration: 0.5s;
    cursor: url('project://database/Packages/com.unity.2d.animation/Editor/Assets/SkinningModule/Icons/Light/Bone.png?fileID=2800000&guid=62ce01ddca719d34ea9648c586a7cc94&type=3#Bone');
}

.btn:hover {
    -unity-background-image-tint-color: rgba(0, 0, 0, 255);
    background-color: rgba(9, 0, 118, 255);
    rotate: 15deg;
    scale: 1.2 1.2;
}
